generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             Int             @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String          @unique
  phone          String
  address        String
  configurations Configuration[]
  orders         Order[]
}

model Model {
  id             Int             @id @default(autoincrement())
  name           String
  basePrice      Int
  model3dPath    String
  configurations Configuration[]
}

model Engine {
  id              Int             @id @default(autoincrement())
  name            String
  description     String
  additionalPrice Int
  configurations  Configuration[]
}

model Transmission {
  id             Int             @id @default(autoincrement())
  name           String
  configurations Configuration[]
}

model Color {
  id              Int             @id @default(autoincrement())
  name            String
  type            String
  additionalPrice Int
  hexCode         String?
  materialName    String?
  configurations  Configuration[]
}

model Interior {
  id              Int             @id @default(autoincrement())
  name            String
  material        String
  additionalPrice Int
  imagePath       String
  configurations  Configuration[]
}

model Rim {
  id              Int             @id @default(autoincrement())
  name            String
  size            Int
  type            String
  additionalPrice Int
  imagePath       String
  configurations  Configuration[]
}

model Feature {
  id                    Int                    @id @default(autoincrement())
  name                  String
  category              String
  additionalPrice       Int
  imagePath             String
  configurationFeatures ConfigurationFeature[]
}

model Configuration {
  id             Int @id @default(autoincrement())
  customerId     Int
  modelId        Int
  engineId       Int
  transmissionId Int
  colorId        Int
  interiorId     Int
  rimId          Int
  totalPrice     Int

  customer     Customer               @relation(fields: [customerId], references: [id])
  model        Model                  @relation(fields: [modelId], references: [id])
  engine       Engine                 @relation(fields: [engineId], references: [id])
  transmission Transmission           @relation(fields: [transmissionId], references: [id])
  color        Color                  @relation(fields: [colorId], references: [id])
  interior     Interior               @relation(fields: [interiorId], references: [id])
  rim          Rim                    @relation(fields: [rimId], references: [id])
  features     ConfigurationFeature[]
  orders       Order[]
}

model ConfigurationFeature {
  configurationId Int
  featureId       Int

  configuration Configuration @relation(fields: [configurationId], references: [id])
  feature       Feature       @relation(fields: [featureId], references: [id])

  @@id([configurationId, featureId])
}

model Order {
  id              Int      @id @default(autoincrement())
  customerId      Int
  configurationId Int
  paymentOption   String
  monthlyRate     Int?
  downpayment     Int?
  orderDate       DateTime @default(now())

  customer      Customer      @relation(fields: [customerId], references: [id])
  configuration Configuration @relation(fields: [configurationId], references: [id])
}
